<div class='content'>
    {{#each photos }}
        {{#if featured}}
            <div class='featured'>
                <a href='/{{ image_id }}'>
                    <img src="{{ link }}" />    
                </a>
            </div>
            <br>
        {{/if}}
    {{/each}}
    <div class='gallery'>
        {{#each photos }}
            <a class='card' href='/{{ image_id }}'>
                <img class='card-image' src="{{ link }}" />
                <p> 
                    {{ title }}
                </p>
            </a>
            
        {{/each}}


    </div>
       


    <a class='button' href="/new">Upload</a>
</div>