
{{> header }}
<h1>Gallery</h1>

{{#each photos }}
    {{#if featured }}
<h2>{{title}}</h2>
    {{/if}}

{{ title }}
{{!-- <p>Hellooooooo</p> --}}
<li data-postid="{{id}}">
    <a href='/gallery/{{id}}'>
        <img src="{{ link }}" />
        <p>{{ title }}</p>
    </a>
</li>
{{/each}}

<a class='button' href="/gallery/new">Upload</a>

{{> footer }}