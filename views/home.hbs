<div class='content'>
    {{#each photos }}
        {{#if featured}}
            <div class='featured'>
                <a href='/gallery/{{ image_id }}'>
                    <img src="{{ link }}" />    
                </a>
            </div>
            <br>
        {{/if}}
    {{/each}}
    <div class='gallery'>
        {{#each photos }}
            <div class='post' data-postid="{{ image_id }}">
                <a href='/gallery/{{ image_id }}'>
                    <img src="{{ link }}" />
                    <p>{{ title }} {{ link }}</p>
                </a>
            </div>
        {{/each}}
    </div>


    <a class='button' href="/gallery/new">Upload</a>
</div>